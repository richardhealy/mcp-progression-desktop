{
  "name": "mcp-progress-desktop",
  "version": "1.1.0",
  "description": "MCP Progress Tracker - Desktop Application for daily progress tracking with Airtable storage",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "server": "node mcp-server.js",
    "http-server": "node http-mcp-server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "airtable": "^0.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.mcpprogress.desktop",
    "productName": "MCP Progress Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer/**/*",
      "assets/**/*",
      "mcp-server.js",
      "http-mcp-server.js",
      "embedded-http-server.js",
      ".env",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png",
      "target": "dmg",
      "identity": null
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "keywords": [
    "mcp",
    "progress",
    "tracking",
    "airtable",
    "desktop",
    "electron"
  ],
  "author": "",
  "license": "MIT"
}
